<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            style="@style/match_wrap"
            android:background="@drawable/dialog_bg"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/dialog_radius">

            <LinearLayout
                style="@style/match_wrap"
                android:background="@drawable/white_round_btnbg"
                android:orientation="vertical"
                android:padding="@dimen/margin_12">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8_minus"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:max="5"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:rating="1"
                    android:progressTint="@color/star_text_color" />


                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvName"
                    style="@style/textview_header_small_match"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_8_minus"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_4"
                    />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvAddress"
                    style="@style/textview_title_match"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/color_black"
                    app:customFont="@string/font_regular" />

                <com.app.warantywise.widget.CustomEditText
                    android:id="@+id/edFeedBack"
                    style="@style/edit_text_style_larger"
                    android:layout_marginTop="@dimen/margin_15"
                    android:hint="@string/any_other_feedback"
                    android:padding="@dimen/margin_5"
                    android:textColorHint="@color/background" />

                <ImageView style="@style/view_layout" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/margin_30">

                    <android.support.v4.widget.Space style="@style/layout_hori_wrap_1" />

                    <com.app.warantywise.widget.CustomTextView
                        android:id="@+id/tvSubmit"
                        style="@style/button_large_wrap"
                        android:gravity="center"
                        android:padding="@dimen/margin_6"
                        android:text="@string/submit"
                        android:textAllCaps="true"
                        android:textColor="@color/color_green_cart"
                        app:customFont="@string/font_bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>