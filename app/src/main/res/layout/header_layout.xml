<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/headerLayout"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/match_wrap"
        android:layout_height="@dimen/margin_50">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/wrap_match"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_20"
            android:src="@drawable/ic_back" />

        <com.app.warantywise.widget.CustomEditText
            android:id="@+id/edSearch"
            style="@style/textview_description_large_match"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivBack"
            android:layout_toStartOf="@+id/textView"
            android:background="@null"
            android:drawablePadding="@dimen/margin_5"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/search_city_product_service"
            android:padding="@dimen/margin_7"
            android:paddingStart="@dimen/margin_0"
            android:visibility="gone"/>
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvHeader"
            style="@style/textview_title_wrap"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:visibility="gone"/>

        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/textView"
            style="@style/textview_title_wrap"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/margin_10"
            android:paddingStart="@dimen/margin_10"
            android:textAllCaps="true"
            android:visibility="gone"/>
    </RelativeLayout>
</layout>