<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="payment"
            type="com.app.warantywise.network.request.PaymentOption"/>
    </data>
    <RelativeLayout
        android:id="@+id/layoutRadio"
        style="@style/match_wrap"
        android:layout_height="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:background="@drawable/grey_corner_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5">
        <RadioButton
            android:id="@+id/radioButton"
            style="@style/textview_description_match"
            android:layout_toStartOf="@+id/ivClose"
            android:buttonTint="@color/color_sky_blue"
            android:clickable="false"
            android:text="@={payment.paymentString}"
            android:paddingStart="@dimen/margin_8"
            android:textAllCaps="true"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ivClose"
            style="@style/image_30"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_grey"
            android:padding="@dimen/margin_8"
            android:visibility="gone"/>
    </RelativeLayout>

</layout>

