<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/match_match"
        android:background="@android:color/white">

        <LinearLayout
            style="@style/match_wrap"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutHeader"
                layout="@layout/header_layout" />

            <RelativeLayout
                android:id="@+id/header_lay"
                style="@style/match_wrap"
                android:layout_height="@dimen/margin_180">

                <ImageView
                    android:id="@+id/storeImage"
                    style="@style/match_match"
                    android:scaleType="fitXY" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvStoreName"
                    style="@style/textview_description_wrap"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginStart="@dimen/margin_10"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/match_wrap"
                android:layout_marginTop="@dimen/margin_15">

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvOrder"
                    style="@style/textview_description_wrap"
                    android:layout_marginStart="@dimen/margin_10"
                    android:text="@string/order_date"
                    android:textAllCaps="true"
                    android:textColor="@color/greyish_color" />

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_wrap"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:text="@string/order_no"
                    android:textAllCaps="true"
                    android:textColor="@color/greyish_color" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvOrderDate"
                    style="@style/textview_description_wrap"
                    android:layout_below="@+id/tvOrder"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/order_date" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvInvoice"
                    style="@style/textview_description_wrap"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvOrder"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/order_no" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                style="@style/match_wrap"
                android:layout_margin="@dimen/margin_10"
                android:elevation="@dimen/margin_5">

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvCartItem"
                        style="@style/match_wrap"
                        android:paddingEnd="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_5" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.app.warantywise.widget.CustomTextView
                style="@style/textview_description_match"
                android:gravity="center"
                android:text="@string/order_status"
                android:textAllCaps="true"
                android:textColor="@color/tab_usl_clr" />

            <com.app.warantywise.widget.CustomTextView
                android:id="@+id/tvOrderStatus"
                style="@style/textview_description_match"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center" />

            <RelativeLayout style="@style/match_wrap">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/post_time"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:max="5"
                    android:progressTint="@color/star_text_color"
                    android:rating="3.5"
                    android:visibility="gone"/>

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvFeedBack"
                    style="@style/textview_description_match"
                    android:gravity="center"
                    android:padding="@dimen/margin_6"
                    android:text="@string/give_feedback"
                    android:textAllCaps="true"
                    android:textColor="@color/doctor_charge_color" />
            </RelativeLayout>


            <com.app.warantywise.widget.CustomTextView
                style="@style/textview_description_wrap"
                android:text="@string/delivery_address"
                android:textAllCaps="true"
                android:textColor="@color/greyish_color" />

            <com.app.warantywise.widget.CustomTextView
                android:id="@+id/tvAddress"
                style="@style/textview_description_wrap"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10" />
            <com.app.warantywise.widget.CustomTextView
                android:id="@+id/tvContact"
                style="@style/button_medium_wrap"
                android:layout_marginEnd="@dimen/margin_20"
                android:background="@drawable/blue_round_btn_bg"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_3"
                android:paddingEnd="@dimen/margin_10"
                android:paddingStart="@dimen/margin_10"
                android:paddingTop="@dimen/margin_3"
                android:text="@string/contact"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </ScrollView>
</layout>