<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    style="@style/match_wrap"
    android:background="@drawable/dialog_bg"
    app:cardCornerRadius="@dimen/dialog_radius"
    android:elevation="@dimen/margin_5">
        <LinearLayout
            style="@style/match_wrap"
            android:background="@drawable/white_round_btnbg"
            android:orientation="vertical"
            android:padding="@dimen/margin_14">
            <ImageView
                android:id="@+id/ivOffer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_28"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="@dimen/margin_20"

                android:scaleType="fitXY"
                android:background="@drawable/icon_wise"/>
            <com.app.warantywise.widget.CustomTextView
                android:id="@+id/tvOffer"
                style="@style/textview_header_ex_large_match"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_horizontal" />

            <com.app.warantywise.widget.CustomTextView
                android:id="@+id/tvOfferDetails"
                style="@style/textview_header_ex_large_match"
                android:layout_gravity="center"
                android:text="Nokia"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_horizontal" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvSubmit"
                    style="@style/button_large_wrap"
                    android:paddingTop="@dimen/margin_6"
                    android:paddingBottom="@dimen/margin_6"
                    android:paddingStart="@dimen/margin_50"
                    android:paddingEnd="@dimen/margin_50"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    app:customFont="@string/font_bold"
                    android:background="@drawable/light_red_round"/>

        </LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>
</layout>