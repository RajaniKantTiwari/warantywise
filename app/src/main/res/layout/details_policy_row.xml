<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/match_match"
        android:gravity="center_vertical">

        <LinearLayout
            style="@style/layout_hori_match_1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/image_20"
                android:layout_centerVertical="true"
                android:src="@drawable/unchecked" />

            <com.app.warantywise.widget.CustomTextView
                style="@style/style_product"
                android:text="@string/warranty"
                app:customFont="@string/font_regular" />
        </LinearLayout>

        <ImageView
            style="@style/view_layout_vertical"
            android:layout_marginBottom="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_13" />

        <LinearLayout
            style="@style/layout_hori_match_1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/image_20"
                android:layout_centerVertical="true"
                android:src="@drawable/extended_waranty" />

            <com.app.warantywise.widget.CustomTextView
                style="@style/style_product"
                android:text="@string/extended_waranty"
                app:customFont="@string/font_regular" />
        </LinearLayout>

        <ImageView
            style="@style/view_layout_vertical"
            android:layout_marginBottom="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_13" />

        <LinearLayout
            style="@style/layout_hori_match_1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/image_20"
                android:layout_centerVertical="true"
                android:src="@drawable/buy_insurance" />

            <com.app.warantywise.widget.CustomTextView
                style="@style/style_product"
                android:text="@string/buy_insurance"
                app:customFont="@string/font_regular" />
        </LinearLayout>

        <ImageView
            style="@style/view_layout_vertical"
            android:layout_marginBottom="@dimen/margin_13"
            android:layout_marginTop="@dimen/margin_13" />

        <LinearLayout
            style="@style/layout_hori_match_1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/image_20"
                android:layout_centerVertical="true"
                android:src="@drawable/unchecked" />

            <com.app.warantywise.widget.CustomTextView
                style="@style/style_product"
                android:text="@string/others"
                app:customFont="@string/font_regular" />
        </LinearLayout>
    </LinearLayout>

</layout>