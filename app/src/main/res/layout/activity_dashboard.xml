<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        style="@style/match_match">

        <RelativeLayout
           style="@style/match_match"
            android:background="@android:color/white">

            <include
                android:id="@+id/toolBar"
                layout="@layout/toolbar_layout" />

            <FrameLayout
                android:id="@+id/container"
                android:layout_below="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottomLayout"
                />

            <include
                android:id="@+id/bottomLayout"
                layout="@layout/bottom_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_navi_height"
                android:layout_alignParentBottom="true"/>
            <com.app.warantywise.widget.MovableFloatingActionButton
                android:id="@+id/fabButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_20"
                app:elevation="@dimen/margin_8"
                app:borderWidth="0dp"
                app:backgroundTint="@color/button_text_color"
                android:layout_centerHorizontal="true"
                android:src="@drawable/close_icon"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/margin_270"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:clickable="true">

            <include android:id="@+id/layoutDrawerLeft"
                layout="@layout/layout_drawer_left"/>

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</layout>