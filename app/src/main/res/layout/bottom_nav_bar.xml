<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navi_height"
        card_view:cardCornerRadius="@dimen/margin_3"
        card_view:cardElevation="@dimen/margin_10"
        card_view:cardUseCompatPadding="false">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/panelAddress"
            style="@style/match_match"
            android:background="@color/colorBackgroundNav">

            <RelativeLayout
                android:id="@+id/linearLayoutBar1"
                style="@style/linear_layout_match"
                android:foreground="?android:attr/selectableItemBackground">

                <View
                    android:id="@+id/viewBar1"
                    style="@style/view_layout_nav_bar" />

                <RelativeLayout style="@style/layout_bottom_image">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewBar1"
                        style="@style/home_view"
                        android:src="@drawable/ic_home" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView style="@style/view_layout_vertical" />

            <RelativeLayout
                android:id="@+id/linearLayoutBar2"
                style="@style/linear_layout_match"
                android:foreground="?android:attr/selectableItemBackground">

                <View
                    android:id="@+id/viewBar2"
                    style="@style/view_layout_nav_bar"
                    android:visibility="invisible" />

                <RelativeLayout style="@style/layout_bottom_image">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewBar2"
                        style="@style/home_view"
                        android:src="@drawable/ic_gift_light" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView style="@style/view_layout_vertical" />

            <RelativeLayout
                android:id="@+id/linearLayoutBar3"
                style="@style/linear_layout_match"
                android:foreground="?android:attr/selectableItemBackground">

                <View
                    android:id="@+id/viewBar3"
                    style="@style/view_layout_nav_bar"
                    android:visibility="invisible" />

                <RelativeLayout style="@style/layout_bottom_image">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewBar3"
                        style="@style/home_view"
                        android:src="@drawable/ic_notification_light" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageView style="@style/view_layout_vertical" />

            <RelativeLayout
                android:id="@+id/linearLayoutBar4"
                style="@style/linear_layout_match"
                android:foreground="?android:attr/selectableItemBackground">

                <View
                    android:id="@+id/viewBar4"
                    style="@style/view_layout_nav_bar"
                    android:visibility="invisible" />

                <RelativeLayout style="@style/layout_bottom_image">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewBar4"
                        style="@style/home_view"
                        android:src="@drawable/ic_user_light" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutBar5"
                style="@style/linear_layout_match"
                android:foreground="?android:attr/selectableItemBackground"
                android:visibility="gone">

                <View
                    android:id="@+id/viewBar5"
                    style="@style/view_layout_nav_bar"
                    android:visibility="invisible" />

                <RelativeLayout style="@style/layout_bottom_image">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewBar5"
                        style="@style/home_view"
                        android:src="@drawable/ic_user" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>