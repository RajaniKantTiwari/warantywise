<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.app.warantywise.utility.CommonUtility" />

        <variable
            name="merchantResponse"
            type="com.app.warantywise.network.response.dashboard.ProductResponse" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout"
        style="@style/match_wrap"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_13"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin_180"
            android:layout_height="wrap_content"
            android:elevation="@dimen/margin_5"
            app:cardCornerRadius="@dimen/margin_6">

            <LinearLayout
                style="@style/match_match"
                android:layout_margin="@dimen/margin_1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="@dimen/margin_180"
                    android:layout_height="@dimen/margin_50"
                    android:src="@drawable/shubh"
                    android:background="@drawable/stroke_grey"
                    android:scaleType="fitXY" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvService"
                    style="@style/textview_description_large_wrap"
                    android:layout_marginStart="@dimen/margin_5"
                    android:maxLines="1"
                    android:text="@string/term_and_condition"
                    android:textColor="@color/black"
                    app:customFont="@string/font_regular" />

                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvAddress"
                    style="@style/textview_description_small_wrap"
                    android:layout_marginStart="@dimen/margin_5"
                    android:maxLines="1"
                    android:text="@string/term_and_condition"
                    android:textColor="@color/black"
                    app:customFont="@string/font_regular" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5">


                    <com.app.warantywise.widget.CustomTextView
                        android:id="@+id/tvCall"
                        style="@style/textview_window_btn"
                        android:layout_marginStart="@dimen/margin_10"
                        android:background="@drawable/call_bg"
                        android:text="@string/call"
                        android:textColor="@color/call_color"
                        app:customFont="@string/font_regular" />

                    <com.app.warantywise.widget.CustomTextView
                        android:id="@+id/tvView"
                        style="@style/textview_window_btn"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:background="@drawable/view_bg"
                        android:text="@string/view"
                        android:textColor="@color/view_color"
                        app:customFont="@string/font_regular" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>