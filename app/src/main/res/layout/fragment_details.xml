<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.app.warantywise.utility.CommonUtility" />

        <variable
            name="merchantResponse"
            type="com.app.warantywise.network.response.dashboard.ProductResponse" />
    </data>

    <FrameLayout style="@style/match_match"
        android:background="@color/white"
        >

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layoutMain"
            style="@style/match_match"
            android:fillViewport="true">

            <LinearLayout
                style="@style/match_match"
                android:orientation="vertical">

                <RelativeLayout style="@style/match_wrap">

                    <RelativeLayout
                        android:id="@+id/header_lay"
                        style="@style/match_wrap"
                        android:minHeight="@dimen/margin_180">

                        <ImageView
                            android:id="@+id/storeImage"
                            style="@style/match_wrap"
                            android:layout_height="@dimen/margin_180"
                            android:background="@drawable/shubh"
                            android:scaleType="fitXY" />

                        <ImageView
                            style="@style/match_wrap"
                            android:layout_height="@dimen/margin_180"
                            android:scaleType="fitCenter"
                            android:src="@color/transulent_color" />


                        <LinearLayout
                            style="@style/wrap_wrap"
                            android:paddingBottom="@dimen/margin_15">

                            <com.app.warantywise.widget.CustomTextView
                                style="@style/textview_description_wrap"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:layout_marginTop="@dimen/margin_5"
                                android:text="@{CommonUtility.oneDecimalPlaceString(merchantResponse.rating)}"
                                android:textColor="@color/rating_text_color"
                                app:customFont="@string/font_bold" />

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:max="5"
                                android:layout_marginTop="@dimen/margin_150"
                                android:progressTint="@color/rating_text_color"
                                android:rating="4" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_review_shopping"
                        style="@style/wrap_wrap"
                        android:layout_below="@+id/header_lay"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:layout_marginTop="@dimen/margin_15_minus">

                        <com.app.warantywise.widget.CustomTextView
                            android:id="@+id/tvUnderWarranty"
                            style="@style/button_medium_wrap"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:background="@drawable/blue_round_btn_bg"
                            android:gravity="center"
                            android:paddingBottom="@dimen/margin_6"
                            android:paddingEnd="@dimen/margin_20"
                            android:paddingStart="@dimen/margin_20"
                            android:paddingTop="@dimen/margin_6"
                            android:text="@string/under_warranty"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/detail_lay"
                        style="@style/match_wrap"
                        android:layout_below="@+id/layout_review_shopping"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_15"
                        android:paddingStart="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_5">

                        <com.app.warantywise.widget.CustomTextView
                            android:id="@+id/productName"
                            style="@style/textview_title_wrap"
                            android:text="Nokia Mobile"
                            android:textColor="@color/darker_black_color" />

                        <com.app.warantywise.widget.CustomTextView
                            android:id="@+id/tvDetails"
                            android:layout_below="@+id/productName"
                            style="@style/textview_description_wrap"
                            android:layout_marginTop="@dimen/margin_2"
                            android:text="bhes45"
                            app:customFont="@string/font_regular" />
                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:layout_toEndOf="@+id/productName"
                            android:layout_marginStart="@dimen/margin_100"
                            android:orientation="vertical"
                            style="@style/match_wrap">

                            <com.app.warantywise.widget.CustomTextView
                                android:layout_below="@+id/productName"
                                style="@style/textview_description_wrap"
                                android:layout_marginTop="@dimen/margin_2"
                                android:text="@string/expire_on"
                                app:customFont="@string/font_regular" />
                            <com.app.warantywise.widget.CustomTextView
                                style="@style/textview_title_wrap"
                                android:text="21 may 2018"
                                android:textColor="@color/button_text_color"
                                app:customFont="@string/font_regular"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/div_b"
                        style="@style/view_layout"
                        android:layout_below="@+id/detail_lay"
                        android:layout_marginTop="@dimen/margin_3" />
                    <LinearLayout
                        android:id="@+id/layout_warranty"
                        android:layout_below="@+id/div_b"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_70"
                        android:orientation="horizontal">
                        <include layout="@layout/details_policy_row"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/div"
                        style="@style/view_layout"
                        android:layout_below="@+id/layout_warranty"
                        android:layout_marginTop="@dimen/margin_3" />
                    <LinearLayout
                        android:id="@+id/layou"
                        style="@style/match_wrap"
                        android:paddingStart="@dimen/margin_15"
                        android:paddingEnd="@dimen/margin_15"
                        android:layout_below="@+id/div"
                        android:orientation="vertical">
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:text="@string/company_name"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/button_text_color"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="Nokia"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:text="@string/customer_name"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/button_text_color"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="John Doe"/>

                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:text="@string/purchased_date"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/button_text_color"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:layout_marginTop="@dimen/margin_5"
                            android:text="21 may 2016"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:text="@string/warranty_period"
                            android:layout_marginTop="@dimen/margin_10"
                            android:textColor="@color/button_text_color"/>
                        <com.app.warantywise.widget.CustomTextView
                            style="@style/textview_description_match"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:text="1 year"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/div_c"
                        style="@style/view_layout"
                        android:layout_below="@+id/layou" />



                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvDocument"
                            style="@style/match_wrap"
                            android:layout_below="@+id/div_c"/>


                    <View
                        android:id="@+id/div_d"
                        style="@style/view_layout"
                        android:layout_below="@+id/rvDocument" />

                    <com.app.warantywise.widget.CustomTextView
                        android:id="@+id/tvReview"
                        style="@style/textview_title_wrap"
                        android:layout_below="@+id/div_d"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingStart="@dimen/margin_15"
                        android:text="@string/your_review"
                        android:textColor="@color/button_text_color"
                        app:customFont="@string/font_regular"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvReview"
                        style="@style/match_wrap"
                        android:layout_below="@+id/tvReview" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/layoutNoData"
            layout="@layout/layout_no_data_found"
            android:visibility="gone" />
    </FrameLayout>
</layout>