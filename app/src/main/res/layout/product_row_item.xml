<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        style="@style/match_wrap"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/dialog_bg"
        android:elevation="@dimen/margin_5"
        app:cardCornerRadius="@dimen/dialog_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProductImage"
                style="@style/image_70"
                android:layout_margin="@dimen/margin_7"
                android:scaleType="fitXY"
                android:src="@drawable/shubh" />

            <LinearLayout
                style="@style/match_wrap"
                android:layout_toEndOf="@+id/ivProductImage"
                android:layout_toStartOf="@+id/layout"
                android:orientation="vertical">

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_title_wrap"
                    android:maxLines="1"
                    android:text="Worhlpool"
                    android:drawablePadding="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_4"
                    android:drawableEnd="@drawable/location"
                    app:customFont="@string/font_bold" />

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_smaller_wrap"
                    android:maxLines="1"
                    android:text="Under Warranty"
                    app:customFont="@string/font_bold" />

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_small_wrap"
                    android:drawableStart="@drawable/calender"
                    android:maxLines="1"
                    android:padding="@dimen/margin_4"
                    android:text="27 may 2017"
                    app:customFont="@string/font_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_7"
                android:layout_marginTop="@dimen/margin_3"
                android:orientation="vertical">

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_large_wrap"
                    android:background="@drawable/blue_round"
                    android:maxLines="1"
                    android:padding="@dimen/margin_4"
                    android:text="Under Warranty"
                    android:textColor="@color/white"
                    app:customFont="@string/font_bold" />

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_smaller_wrap"
                    android:maxLines="1"
                    android:text="Expire on"
                    app:customFont="@string/font_bold" />

                <com.app.warantywise.widget.CustomTextView
                    style="@style/textview_description_large_wrap"
                    android:maxLines="1"
                    android:text="27 may 2009"
                    android:textColor="@color/button_text_color"
                    app:customFont="@string/font_bold" />
            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:layout_below="@+id/layout"
                android:layout_toEndOf="@+id/ivProductImage"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_7">
                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvWarranty"
                    style="@style/btn_style"
                    android:background="@drawable/blue_round_btn_bg"
                    android:text="@string/warranty"
                    android:textColor="@color/white"
                    app:customFont="@string/font_bold" />
                <android.support.v4.widget.Space
                    style="@style/layout_hori_wrap_1"/>
                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvExtend"
                    style="@style/btn_style"
                    android:background="@drawable/yellow_button_bg"
                    android:text="@string/extend"
                    android:textColor="@color/white"
                    app:customFont="@string/font_bold" />
                <android.support.v4.widget.Space
                    style="@style/layout_hori_wrap_1"/>
                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvBuyInsurance"
                    style="@style/btn_style"
                    android:background="@drawable/blue_button_bg"
                    android:text="@string/buy_insurance"
                    android:textColor="@color/white"
                    app:customFont="@string/font_bold" />
                <android.support.v4.widget.Space
                    style="@style/layout_hori_wrap_1"/>
                <LinearLayout
                    android:id="@+id/layoutOffer"
                    style="@style/wrap_wrap">
                    <ImageView
                        style="@style/image_20"
                        android:src="@drawable/checked"/>
                <com.app.warantywise.widget.CustomTextView
                    android:id="@+id/tvOffer"
                    style="@style/btn_style"
                    android:text="@string/offer"
                    android:textColor="@color/offer_btn_color"
                    app:customFont="@string/font_bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>