<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/match_match">
    <include
        android:id="@+id/layoutHeader"
        layout="@layout/toolbar_layout"/>
    <RelativeLayout
        style="@style/layout_ver_match_1"
        android:background="@color/color_term_header">
        <ImageView
            android:layout_width="@dimen/margin_150"
            android:layout_height="@dimen/margin_130"
            android:layout_centerInParent="true"
            android:src="@drawable/shubh"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <LinearLayout
        style="@style/layout_ver_match_1_6"
        android:padding="@dimen/margin_10"
        android:orientation="vertical">
        <android.support.v4.widget.Space
           style="@style/layout_ver_match_2" />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvNeed"
            style="@style/textview_description_match"
            android:gravity="center_horizontal"
            android:text="@string/need_some_help"
             />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvGetLost"
            style="@style/textview_title_match"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_7"
            android:text="Get lost? Don't know how to use?"
            app:customFont="@string/font_regular"
            />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvTerms"
            style="@style/textview_title_match"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_3"
            app:customFont="@string/font_regular"
            android:text="feel free to get touch with us"
            />
        <android.support.v4.widget.Space
            style="@style/layout_ver_match_1" />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvContactUs"
            style="@style/match_wrap"
            android:background="@drawable/yellow_button_bg"
            android:elevation="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_12"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:layout_alignParentBottom="true"
            android:text="@string/contact_us"
            android:textAllCaps="true"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_large"
            app:customFont="@string/font_bold" />
        <android.support.v4.widget.Space
            style="@style/layout_ver_match_1" />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvFrequentlyAsked"
            style="@style/match_wrap"
            android:background="@drawable/term_button_bg"
            android:elevation="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_12"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:layout_alignParentBottom="true"
            android:text="@string/frequently_asked_question"
            android:textAllCaps="true"
            android:textColor="@color/background"
            android:textSize="@dimen/button_large"
            app:customFont="@string/font_bold" />
        <android.support.v4.widget.Space
            style="@style/layout_ver_match_3" />
        <com.app.warantywise.widget.CustomTextView
            android:id="@+id/tvTermsCondition"
            style="@style/textview_title_match"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_8"
            app:customFont="@string/font_regular"
            android:text="@string/term_and_condition_privacy"
            />
    </LinearLayout>
</LinearLayout>
</layout>